/**
 * @file Firestore Security Rules for AuditWise Dashboard
 * @description This ruleset enforces a strict user-ownership model for all data,
 *              nested under /users/{userId}.  Windows login credentials are
 *              also protected under a similar ownership model.
 *
 * Data Structure:
 * - /users/{userId}/projects/{projectId}: Stores project data owned by the user.
 * - /users/{userId}/projects/{projectId}/auditReports/{auditReportId}: Stores audit reports for a project.
 * - /users/{userId}/projects/{projectId}/auditReports/{auditReportId}/reportSections/{reportSectionId}: Stores sections within audit reports.
 * - /users/{userId}/projects/{projectId}/auditReports/{auditReportId}/reportSections/{reportSectionId}/missingTopics/{missingTopicId}: Stores missing topics for report sections.
 * - /users/{userId}/projects/{projectId}/auditReports/{auditReportId}/reportSections/{reportSectionId}/insightFeedbacks/{insightFeedbackId}: Stores insight feedbacks for report sections.
 * - /windowsLogins/{userId}: Stores windows login credentials for a user.
 *
 * Key Security Decisions:
 * - User listing is disallowed.
 * - All write operations are strictly controlled via ownership checks.
 * - Data validation is minimized for rapid prototyping but includes essential
 *   checks to maintain relational integrity.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     * @returns {boolean} True if the request is authenticated, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user is the owner of the resource.
     * @param {string} userId - The user ID to compare against the authenticated user's ID.
     * @returns {boolean} True if the authenticated user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner of the existing resource.
     * @param {string} userId - The user ID to compare against the authenticated user's ID.
     * @returns {boolean} True if the authenticated user is the owner and the resource exists, false otherwise.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description Security rules for Project documents.
     * @path /users/{userId}/projects/{projectId}
     * @allow (create) - Authenticated user with matching {userId} can create a project.
     * @allow (get, list, update, delete) - Authenticated user with matching {userId} can access their project.
     * @deny (create) - Authenticated user with non-matching {userId} cannot create a project.
     * @deny (update, delete) - Non-authenticated user cannot update or delete.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/projects/{projectId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Security rules for AuditReport documents.
     * @path /users/{userId}/projects/{projectId}/auditReports/{auditReportId}
     * @allow (create) - Authenticated user with matching {userId} can create an audit report.
     * @allow (get, list, update, delete) - Authenticated user with matching {userId} can access their audit report.
     * @deny (create) - Authenticated user with non-matching {userId} cannot create an audit report.
     * @deny (update, delete) - Non-authenticated user cannot update or delete.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/projects/{projectId}/auditReports/{auditReportId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Security rules for ReportSection documents.
     * @path /users/{userId}/projects/{projectId}/auditReports/{auditReportId}/reportSections/{reportSectionId}
     * @allow (create) - Authenticated user with matching {userId} can create a report section.
     * @allow (get, list, update, delete) - Authenticated user with matching {userId} can access their report section.
     * @deny (create) - Authenticated user with non-matching {userId} cannot create a report section.
     * @deny (update, delete) - Non-authenticated user cannot update or delete.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/projects/{projectId}/auditReports/{auditReportId}/reportSections/{reportSectionId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Security rules for MissingTopic documents.
     * @path /users/{userId}/projects/{projectId}/auditReports/{auditReportId}/reportSections/{reportSectionId}/missingTopics/{missingTopicId}
     * @allow (create) - Authenticated user with matching {userId} can create a missing topic.
     * @allow (get, list, update, delete) - Authenticated user with matching {userId} can access their missing topic.
     * @deny (create) - Authenticated user with non-matching {userId} cannot create a missing topic.
     * @deny (update, delete) - Non-authenticated user cannot update or delete.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/projects/{projectId}/auditReports/{auditReportId}/reportSections/{reportSectionId}/missingTopics/{missingTopicId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Security rules for InsightFeedback documents.
     * @path /users/{userId}/projects/{projectId}/auditReports/{auditReportId}/reportSections/{reportSectionId}/insightFeedbacks/{insightFeedbackId}
     * @allow (create) - Authenticated user with matching {userId} can create an insight feedback.
     * @allow (get, list, update, delete) - Authenticated user with matching {userId} can access their insight feedback.
     * @deny (create) - Authenticated user with non-matching {userId} cannot create an insight feedback.
     * @deny (update, delete) - Non-authenticated user cannot update or delete.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/projects/{projectId}/auditReports/{auditReportId}/reportSections/{reportSectionId}/insightFeedbacks/{insightFeedbackId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Security rules for WindowsLogin documents.
     * @path /windowsLogins/{userId}
     * @allow (create) - Authenticated user with matching {userId} can create a windows login.
     * @allow (get, list, update, delete) - Authenticated user with matching {userId} can access their windows login.
     * @deny (create) - Authenticated user with non-matching {userId} cannot create a windows login.
     * @deny (update, delete) - Non-authenticated user cannot update or delete.
     * @principle Enforces document ownership for all operations.
     */
    match /windowsLogins/{userId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}